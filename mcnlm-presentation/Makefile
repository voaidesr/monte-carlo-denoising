# ---------------------------------------------------------
# Makefile for LaTeX Beamer Presentation
# ---------------------------------------------------------
# 1. CONFIGURATION
# Name of your main TeX file (without the .tex extension)
PROJECT = main

# Compiler to use (pdflatex is standard for Beamer)
COMPILER = pdflatex

# Flags: non-stop mode prevents the compiler from pausing on errors
FLAGS = -interaction=nonstopmode -file-line-error

# ---------------------------------------------------------
# 2. TARGETS
# ---------------------------------------------------------

# Default target: builds the PDF
all: $(PROJECT).pdf

# Rule to generate the PDF
# We run pdflatex twice to ensure the Table of Contents 
# and Slide Numbers (nav/snm) are synchronized.
$(PROJECT).pdf: $(PROJECT).tex
	$(COMPILER) $(FLAGS) $(PROJECT).tex
	$(COMPILER) $(FLAGS) $(PROJECT).tex

# Clean up auxiliary files generated by LaTeX
clean:
	rm -f *.aux *.log *.nav *.out *.snm *.toc *.vrb *.bbl *.blg

# Clean up everything, including the final PDF
distclean: clean
	rm -f $(PROJECT).pdf

# Phony targets prevent conflicts with files of the same name
.PHONY: all clean distclean